<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.notesculture">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activity.ActivityChangePassword" />
        <activity
            android:name=".view.ui.activity.ActivitySplash"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.activity.ActivityLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ActivityCreateProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ActivityOtp"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ui.activity.ActivityWelcome"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ActivityMain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ActivitySignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.activity.ActivityForgetPassword"
            android:screenOrientation="portrait" />
    </application>

</manifest>